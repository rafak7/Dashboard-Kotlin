<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal do aplicativo -->
    <style name="Theme.DashboardClientes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cor primária usada em vários elementos da UI -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor secundária usada em botões e ações -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Cor de fundo do aplicativo -->
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- Estilo padrão dos botões -->
        <item name="buttonStyle">@style/CustomButton</item>

        <!-- Estilo padrão para campos de texto -->
        <item name="editTextStyle">@style/CustomEditText</item>
    </style>
</resources>
